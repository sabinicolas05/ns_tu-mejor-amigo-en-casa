generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int    @id @default(autoincrement())
  fullname String @db.VarChar(32)
  email    String @db.VarChar(32)
  password String @db.VarChar(64)

  pets     pets[]
}

model pets {
  id          Int        @id @default(autoincrement())
  name        String     @db.VarChar(32)
  status      PetStatus
  photo       String     @db.VarChar(64)
  race_id     Int
  category_id Int
  gender_id   Int
  user_id     Int        // Clave foránea

  race       races      @relation(fields: [race_id], references: [id])
  category   categories @relation(fields: [category_id], references: [id])
  gender     genders    @relation(fields: [gender_id], references: [id])
  user       users      @relation(fields: [user_id], references: [id]) // Relación inversa
}

model races {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(32)

  pets pets[]
}

model categories {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(32)

  pets pets[]
}

model genders {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(32)

  pets pets[]
}

enum PetStatus {
  ADOPTADO
  POR_ADOPTAR
}
